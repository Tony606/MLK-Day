<%include Header%>
    <body>
        <h1>Welcome to the administrator page</h1>
        <div class = "container">
        <form method="post" class="form-horizontal" role = "form" action="/agency_update">
            <div class ="form-group">
                <label for="Location" class="col-sm-3 control-label">*Agency Location:</label>
                <div class="col-sm-9">
                <input type="text" id="Location" class="form-control" placeholder="Enter agency name" name="Location" required autofocus><br>
                </div>
            </div>
            <div class ="form-group">
                <label for="Agency" class="col-sm-3 control-label" >*Agency Name:</label><br>
                <input type="text" placeholder="Enter agency name" name="Agency_Name" required><br>
            </div>
            <div class ="form-group">
                <label for="Table_Num" class="col-sm-3 control-label">*Table Number:</label><br>
                <input type="number" placeholder="use scroll bar or enter number" name="Table_Num" required><br>
            </div>
            <div class ="form-group">
                <label for="Capacity" class="col-sm-3 control-label">*Capacity:</label><br>
                <input type="number" placeholder="use scroll bar or enter number" name="Capacity" required><br>
            </div>
            <div class ="form-group">
                <label for="Description" class="col-sm-3 control-label">*Event Description:</label><br>
                <textarea class ="desc" placeholder="Enter event description" name="Description"></textarea><br>
            </div>
            <div class ="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <button type="submit" class="btn btn-primary btn-block">Add Agency</button>
                </div>
            </div>
        </form>
        </div>
