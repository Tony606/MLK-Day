<!DOCTYPE HTML>
<html lang = "en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/styles/search.css' />
    <link rel="stylesheet" href="/styles/form.css"/>
    <link rel="stylesheet" href="/styles/style.css"/>
    <style>
        table {
            border-collapse: collapse;
            width: 50%;
        }
        th{
            background-color: #000066;
            color: white;
        }
        th, td {
            text-align: left;
            padding: 4px;
            width: 18%;
        }

        tr:nth-child(even){background-color: #f2f2f2}
    </style>
</head>
<%include Header%>
<body>
<h1>Volunteer Info</h1>

<h2>search results</h2>

<%console.log(profile)%>

<div style ="overflow-x:auto;">
    <table>
        <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Agency</th>
        <th>Shirt Size</th>
        <th>Table #</th>
        </tr>

        <% profile.forEach(function(element) { console.log( 'element' +JSON.stringify(element));%>
        <tr>
            <td><%= element.Fname%></td>
            <td><%= element.Lname%></td>
            <td><%= element.Email%></td>
            <td><%= element.Agency%></td>
            <td><%= element.Shirt_Size%></td>
        <%})%>
        </tr>
    </table>
</div>
</body>
</html>